#include<iostream>
#include<vector>
using namespace std;
int main()
{
    int a=0, temp=0;
    vector<int> b;
    b.clear();

    while(cin >> a)
    {
        b.clear();
        temp=a;

        while(temp>=2)
        {
            b.push_back(temp % 2);
            temp=(temp-temp%2)/2;
        }
        if(temp==1){b.push_back(1);}

        for(int i=int(b.size())-1;i>=0;i--)
        {
            cout << b[i] << "";
        }
        cout << "\n";
    }
    
    getchar();
    getchar();
    return 0;

}
