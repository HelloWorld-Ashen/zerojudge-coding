#include <iostream>
#include<vector>
#include <algorithm>
using namespace std;
 
int main()
{
    int n=0,temp=0,k=0; //n個側資,k個親戚
    int x=0, temp2=0; //x為最近的某數
    long long sum=0; //總和
    int ans[100000];
    vector<int> a;

    cin>>n;
    for(int i=0; i<n; i++)
    {
        cin>>k;
        a.clear();
        for(int j=0; j<k; j++)
        {
            cin>>temp;
            a.push_back(temp);
        }

        sort(a.begin(), a.end());

        if(k%2==0)
        {
            x=a[k/2-1];
        }else
        {
            x=a[k/2];
        }
        
        for(int m=0; m<k; m++)
        {
            temp2=x-a[m];
            if(temp2<0){temp2*=-1;}
            sum+=temp2;
        }
        ans[i]=sum;
        sum=0;
            
    }
    for(int i=0; i<n; i++)
    {
        cout<<ans[i]<<endl;
    }
    
    getchar();
    getchar();
    return 0;
}
